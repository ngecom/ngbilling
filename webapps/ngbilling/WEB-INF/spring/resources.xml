    <import resource="springintegration-infrastructure.xml"/>
    <import resource="billing-process-job-context.xml"/>
    <import resource="ageing-process-job-context.xml"/>


    <!--
          ***************************************************
          *         MAIN BEAN DEFINITIONS               *
          ***************************************************
